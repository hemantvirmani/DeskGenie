# Environment Variables Example
# Copy this file to .env and fill in your actual values

# ============================================
# REQUIRED: Google Gemini API Configuration
# ============================================
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your_google_api_key_here

# ============================================
# OPTIONAL: Langfuse Observability
# ============================================
# Get your keys from: https://cloud.langfuse.com/
# Used for tracing and analytics (optional)
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_HOST=https://cloud.langfuse.com

# ============================================
# OPTIONAL: Agent Configuration
# ============================================
# Active agent type: langgraph or reactlanggraph
ACTIVE_AGENT=langgraph

# ============================================
# OPTIONAL: Output Configuration
# ============================================
# Default output directory for generated files
# Default: ~/Desktop_Agent_Output
DESKGENIE_OUTPUT_DIR=~/Desktop_Agent_Output

# ============================================
# OPTIONAL: Development Settings
# ============================================
# Development mode (true/false)
DEV_MODE=true

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable verbose logging
VERBOSE=false

# ============================================
# OPTIONAL: Server Configuration
# ============================================
# Backend server host
HOST=0.0.0.0

# Backend server port
PORT=8000

# Frontend development server port (for hot reload)
FRONTEND_PORT=5173

# ============================================
# OPTIONAL: Feature Flags
# ============================================
# Enable GAIA benchmark mode
ENABLE_BENCHMARK=true

# Enable web search tools
ENABLE_WEB_SEARCH=true

# Enable file compression tools
ENABLE_COMPRESSION=true

# Enable OCR tools
ENABLE_OCR=true

# Enable video processing
ENABLE_VIDEO_PROCESSING=true

# ============================================
# OPTIONAL: API Rate Limiting
# ============================================
# Maximum requests per minute
RATE_LIMIT=60

# ============================================
# OPTIONAL: File Processing Limits
# ============================================
# Maximum file size for processing (in MB)
MAX_FILE_SIZE=500

# Maximum number of files for batch operations
MAX_BATCH_SIZE=100

# ============================================
# SECURITY NOTES
# ============================================
# 1. Never commit .env file to version control
# 2. Keep API keys secret and secure
# 3. Rotate API keys periodically
# 4. Use different keys for development and production
# 5. Monitor API usage in Google Cloud Console
# 6. Don't share .env file with others